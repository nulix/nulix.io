---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import ThemeIcon from "@components/themeicon.astro";

const menuitems = [
  {
    title: "Documentation",
    path: "https://docs.nulix.hr",
    target: "_blank",
    rel: "noopener noreferrer",
  },
  // {
  //   title: "Pricing",
  //   path: "/pricing",
  // },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "News",
    path: "/news",
  },
  {
    title: "Contact",
    path: "/contact",
  },
  // {
  //   title: "Features",
  //   path: "#",
  //   children: [
  //     { title: "Action", path: "/" },
  //     { title: "Another action", path: "#" },
  //     { title: "Dropdown Submenu", path: "#" },
  //     { title: "404 Page", path: "/404" },
  //   ],
  // },
  // {
  //   title: "Pro Version",
  //   badge: true,
  //   path: "https://astroship-pro.web3templates.com/",
  // },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <img src="/logo-dark.png" alt="NULIX Logo" class="h-8 logo-dark" />
          <img src="/logo-light.png" alt="NULIX Logo" class="h-8 logo-light" />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      target={item.target || "_self"}
                      rel={item.rel || ""}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <!-- Hamburger menu -->
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link
            href="http://platform.nulix.hr"
            target="_blank"
            rel="noopener noreferrer"
            style="muted"
            block
            size="md">Platform</Link
          >
          <!-- <Link href="/contact" size="md" block>Sign up</Link> -->
          <ThemeIcon />
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link
          href="http://platform.nulix.hr"
          target="_blank"
          rel="noopener noreferrer"
          style="outline"
          size="md">Platform</Link
        >
        <!-- <Link href="/contact" size="md">Sign up</Link> -->
        <ThemeIcon />
      </div>
    </div>
  </header>
</Container>
